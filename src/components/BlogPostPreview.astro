---
import { Image } from "astro:assets";
const { post } = Astro.props;

import type { ImageMetadata } from "astro";
import ImageToggleComponent from "./ImageToggleComponent.astro";

const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/content/images/*.{jpeg,jpg,png,gif}"
);
if (!images[post.data.imgHeading])
    throw new Error(
        `"${post.data.imgHeading}" does not exist in glob: "src/content/images/*.{jpeg,jpg,png,gif}"`
    );

const headerImage =
    "/assets/lack-of-life-loss-of-joy/lack-of-life-loss-of-joy-header.png";
---

<div class="wrapper">
    <div class="header">
        <ImageToggleComponent
            mobileImgUrl={post.data.imgHeadingMobile}
            mobileWidth={500}
            mobileHeight={100}
            desktopImgUrl={post.data.imgHeading}
            desktopWidth={1500}
            desktopHeight={200}
            toggleWidth={640}
        />
        <!-- <Image
            src={images[post.data.imgHeading]()}
            alt="lack of life, loss of life"
            widths={[240, 540, 720]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, 720px`}
        /> -->
        <!-- <h1 class="title">{post.data.title}</h1> -->
    </div>
    <div class="info">
        <p class="lbl-date">Date:</p>
        <ImageToggleComponent
            mobileImgUrl={post.data.imgDateMobile}
            mobileWidth={400}
            mobileHeight={160}
            desktopImgUrl={post.data.imgDate}
            desktopWidth={2000}
            desktopHeight={800}
            toggleWidth={640}
        />
        <!-- <time datetime={post.data.publishDate.toISOString()}
            >{post.data.publishDate.toDateString().slice(4, 15)}</time
        > -->
    </div>
    <div class="doodle">
        <div class="notes">Additional Notes:</div>
        <ImageToggleComponent
            mobileImgUrl={post.data.imgDoodleMobile}
            mobileWidth={900}
            mobileHeight={600}
            desktopImgUrl={post.data.imgDoodle}
            desktopWidth={600}
            desktopHeight={900}
            toggleWidth={640}
        />
    </div>

    <h3 class="subtitle">{post.data.description}</h3>
    <div set:html={post.data.previewText} class="preview" />
    <div class="footer">
        <a href={`/posts/${post.slug}`}>
            <ImageToggleComponent
                mobileImgUrl={post.data.imgCallToActionMobile}
                mobileWidth={600}
                mobileHeight={100}
                desktopImgUrl={post.data.imgCallToAction}
                desktopWidth={1200}
                desktopHeight={100}
                toggleWidth={640}
            />
            <!-- <Image
            src={images[post.data.imgCallToActionHover]()}
            class="img-hover-on"
            alt="lack of life, loss of life"
            widths={[240, 540, 720]}
            sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px`}
        /> -->
        </a>
    </div>
</div>
<style>
    .img-hover-off {
        opacity: 100%;
    }

    .img-hover-on {
        opacity: 0%;
    }
    .wrapper {
        container: wrapper / inline-size;

        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(5, auto);
        position: relative;

        width: clamp(20rem, 90vw, 50rem);

        border: var(--border-size-3) solid black;
        border-radius: var(--radius-2);
        box-shadow: var(--shadow-3);

        background-repeat: repeat;
    }

    .header {
        width: 100%;
        aspect-ratio: 1200/160;
        position: relative;
        grid-column: span 3;

        border-bottom: var(--border-size-3) black solid;
        background-color: var(--color-main-light);
        background-image: url();

        img {
            position: absolute;
            max-width: 100%;
            height: auto;
            top: -0.2rem;
            left: -0.8rem;
            transform: rotate(-1deg);
            opacity: 90%;
        }
    }

    .info {
        position: relative;
        grid-column: 3 / 4;
        grid-row: 2 / 3;
        aspect-ratio: 2.5;
        background-color: var(--color-bg-light);
        border-left: var(--border-size-3) black solid;
        border-bottom: var(--border-size-3) black solid;
        background-size: contain;
        .lbl-date {
            padding-left: var(--size-1);
            position: absolute;
            font-weight: 700;
        }
        img {
            position: absolute;
            height: auto;
            inset: 0;
            margin: auto;
        }
    }
    .doodle {
        background-color: var(--color-bg-light);
        border-left: var(--border-size-3) solid black;

        grid-column: 3 / 4;
        grid-row: 3 / 4;

        position: relative;

        width: 100%;
        min-height: 15rem;

        .notes {
            position: absolute;
            width: fit-content;
            padding-left: var(--size-1);
            font-weight: 700;
            /* background-color: var(--color-highlight);
            border-bottom: var(--border-thick);
            border-right: var(--border-thick); */
        }
        img {
            position: absolute;
            aspect-ratio: 2/3;
            max-width: 100%;
            width: 100%;
            inset: 0;
            margin: auto;
        }
    }

    h3 {
        grid-column: 1 / 3;
        grid-row: 2 / 3;

        padding-left: var(--size-3);
        margin-bottom: var(--size-2);
        line-height: var(--font-lineheight-2);

        font-size: var(--font-size-2);
        font-weight: 700;
        text-align: left;
    }

    .preview {
        grid-column: 1 / 3;
        grid-row: 3 / 4;
        padding: var(--size-3);
    }

    .footer {
        grid-column: 1 / 4;
        position: relative;
        aspect-ratio: 12;
        min-height: 2rem;
        background-color: var(--color-highlight);
        border-top: var(--border-size-3) solid black;
        padding: var(--size-1) var(--size-3);

        img {
            position: absolute;
            height: auto;
            inset: 0;
            margin: auto;
        }
        a {
            display: block;
            margin-right: var(--size-2);

            font-family: var(--font-serif);
            font-weight: 700;
            font-size: var(--font-size-4);
            text-decoration: none;
            color: var(--color-main-light);
        }

        a::before {
            content: " ";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        [data-icon] {
            display: inline-block;
            font-size: 1.5rem;
        }
    }

    @media (width < 640px) {
        .header {
            grid-column: span 3;
            aspect-ratio: 1200/240;
        }
        .info {
            grid-column: span 3;
            grid-row: 5;
            aspect-ratio: 5;
            border: 0;
            border-bottom: var(--border-thick);
        }
        .doodle {
            grid-column: span 3;
            grid-row: 4;

            aspect-ratio: 3/2;
            border: 0;
            border-bottom: var(--border-thick);
            img {
                width: auto;
                height: 100%;
            }
        }
        h3 {
            grid-column: span 3;
            grid-row: 2;
            font-size: var(--font-size-2);
        }
        .preview {
            grid-column: span 3;
            grid-row: 3;
            font-size: var(--font-size-1);
            border-bottom: var(--border-thick);
        }
        .footer {
            grid-column: span 3;
            grid-row: 6;
            aspect-ratio: 6;
            border: 0;
        }
    }
</style>
<script>
    const hoverImages = document.querySelectorAll(".img-hover-on");
    const nonHoverImages = document.querySelectorAll(".img-hover-off");

    hoverImages.forEach((img) => {
        console.log(img);
        img.addEventListener("click", (e) => {
            const element = e.target as HTMLElement;
            console.log(element);
            element.setAttribute("style", "opacity:0%");
            const nextElement = element.nextSibling;
        });
    });
</script>
