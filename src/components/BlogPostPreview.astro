---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import header from '../content/images/lack-of-life-loss-of-joy-heading.png'
const { post } = Astro.props
---
<div class="container noise">
    <div class="header">
        <Image src={header} 
        alt="lack of life, loss of life"
        widths={[240, 540, 720, header.width,]}
        sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${header.width}px`}
        />
        <!-- <h1 class="title">{post.data.title}</h1> -->
    </div>
    <h3 class="subtitle">{post.data.description}</h3>
    <div set:html={post.data.previewText} class="preview"/>
    <div class="footer">
        <!-- <time datetime={post.data.publishDate.toISOString()}>{post.data.publishDate.toDateString().slice(4,15)}</time> -->
        <a href={`/posts/${post.slug}`}>read</a><Icon name="maki:arrow" />

        
    </div>
</div>
<style>
    .container {
         display: flex;
         flex-direction: column;
        position: relative;

         /* background-color: var(--color-bg-light); */
         border: var(--border-size-1) solid var(--gray-4); 
         border-radius: var(--radius-2);
         box-shadow: var(--shadow-1);

        /* overflow: hidden; */
    }
    .noise {
        /* background: var(--color-bg-light); */
        background-image: url(../assets/handmadepaper.webp);
        background-repeat: repeat;
        /* background-size: contain; */
        /* background-image: url(../assets/card-background.svg); */
    }

    .header {
        width: 100%;
        aspect-ratio: 1200/160;
        position: relative;

        margin-bottom: var(--size-2);
        border-bottom: var(--border-size-2) solid black;
        /* background-color: #70919C; */
        /* background-color: var(--color-main-light);  */
        /* padding: var(--size-3); */
        /* color: var(--color-highlight); */
    }
    img {
        position: absolute;
        max-width: 100%;
        height: auto;
        top: -0.2rem;
        left: -0.8rem;
        transform: rotate(-2deg);
        opacity: 90%;
    }
    
    h3 {
        /* color: var(--color-bg-light); */
        padding-left: var(--size-3);
        margin-bottom: var(--size-2);
        line-height: var(--font-lineheight-2);
        font-size: var(--font-size-2);
        font-weight: 700;
    }
    .preview {
        padding: var(--size-2) var(--size-3);
        padding-bottom: 0;
    }
    .preview :global(p) {
        margin-bottom: var(--font-size-0);
    }
    .footer {
        position: relative;
        display: flex;
        flex-direction: row;
        justify-content: right; 
        align-items: center;
        background-color: var(--color-highlight);
        padding: var(--size-1) var(--size-3);
    }
    a {
        display: block;
        margin-right: var(--size-2);

        font-family: var(--font-serif);
        font-weight: 700;
        font-size: var(--font-size-4);
        text-decoration: none;
        color: var(--color-main-light);
    }
    a::before {
        content: " ";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

    }
    [data-icon] {
        display: inline-block;
        font-size: 1.5rem;
    }
</style>